<resources>

    <style name="AppTheme" parent="@style/Theme.Romens.Default">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent_2</item>
    </style>



    <!-- Live stream -->
    <style name="Theme.Romens.Livestream" parent="Theme.Romens">
        <item name="android:windowBackground">@color/window_grey_background</item>
        <item name="actionBarInsetStart">@dimen/keyline_2_minus_16dp</item>
    </style>

    <!-- Empty views -->
    <style name="EmptyText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/body_text_disabled</item>
    </style>

    <!-- Body content -->
    <style name="TextHeader">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">@integer/font_textStyle_medium</item>
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextHeaderSub">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/body_text_2</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="Widget.Romens.EditText" parent="Widget.AppCompat.EditText">
        <!--<item name="android:background">@drawable/edit_text</item>-->
    </style>

    <style name="Widget.Romens.Progress" parent="Widget.AppCompat.ProgressBar"></style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">@dimen/headerbar_elevation</item>
    </style>

    <style name="HeaderBar.Light" parent="HeaderBar">
        <item name="android:background">@color/window_grey_background</item>
    </style>

    <!-- app -->
    <style name="GuideFooterBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:elevation">@dimen/headerbar_elevation</item>
    </style>


    <style name="TabTitle">
        <item name="android:textColor">@color/text_primary_color</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListItemContainerBase">
        <item name="android:minHeight">?android:listPreferredItemHeight</item>
    </style>

    <style name="SimpleListItem" parent="ListItemContainerBase">
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">?android:attr/listPreferredItemPaddingRight</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="SimpleListItem.Small" parent="SimpleListItem">
        <item name="android:minHeight">48dip</item>
    </style>

    <style name="SimpleListItem.Inset" parent="SimpleListItem">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="SimpleListItem.Inset.Small" parent="SimpleListItem.Inset">
        <item name="android:minHeight">48dip</item>
    </style>

    <style name="SimpleListItem.Inset.XSmall" parent="SimpleListItem.Inset.Small">
        <item name="android:minHeight">32dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="SimpleListItemTitleText">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/body_text_1</item>
    </style>

    <style name="SimpleListItemSubTitleText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/body_text_2</item>
    </style>

    <style name="RmButtonBase" parent="@android:style/Widget.Button.Small">
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">44dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PrimaryButton" parent="RmButtonBase">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GroupPrimaryButton" parent="PrimaryButton">
        <item name="android:minWidth">40dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="GroupMore">
        <item name="android:minWidth">40dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/btn_primary_default</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="LoginEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/body_text_1</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
