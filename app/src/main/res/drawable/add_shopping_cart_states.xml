<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:dither="true" android:shape="rectangle">

            <stroke android:width="1dp" android:color="@color/md_grey_300" />

            <solid android:color="@color/md_grey_300" />

            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:dither="true" android:shape="rectangle">

            <stroke android:width="1dp" android:color="@color/md_green_400" />

            <solid android:color="@color/md_green_300" />

            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape android:dither="true" android:shape="rectangle">

            <stroke android:width="1dp" android:color="@color/md_green_200" />

            <solid android:color="@color/md_green_100" />

            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>