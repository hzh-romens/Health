<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/md_white_1000">

    <TextView
        android:id="@+id/dialog_day_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重复"
        android:textSize="@dimen/abc_text_size_menu_material"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_marginTop="20dp"
        android:id="@+id/dialog_day_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_day_title"
        android:layout_marginLeft="2dp">

        <RadioButton
            android:id="@+id/dialog_day_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="1"
            android:text="每天"
            android:textSize="@dimen/abc_text_size_body_1_material" />

        <RadioButton
            android:id="@+id/dialog_day_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="2"
            android:text="每2天"
            android:textSize="@dimen/abc_text_size_body_1_material" />

        <RadioButton
            android:id="@+id/dialog_day_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="每3天"
            android:hint="3"
            android:textSize="@dimen/abc_text_size_body_1_material" />

        <RadioButton
            android:id="@+id/dialog_day_item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="每4天"
            android:hint="4"
            android:textSize="@dimen/abc_text_size_body_1_material" />

        <RadioButton
            android:id="@+id/dialog_day_item5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="5"
            android:text="每5天"
            android:textSize="@dimen/abc_text_size_body_1_material" />

        <RadioButton
            android:id="@+id/dialog_day_item6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="每6天"
            android:hint="6"
            android:textSize="@dimen/abc_text_size_body_1_material" />
    </RadioGroup>

    <TextView
        android:id="@+id/dialog_day_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dialog_day_group"
        android:layout_margin="30dp"
        android:text="确定"
        android:textColor="@color/theme_primary"
        android:textSize="@dimen/abc_text_size_caption_material"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_day_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_day_group"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@id/dialog_day_confirm"
        android:text="取消"
        android:textColor="@color/theme_primary"
        android:textSize="@dimen/abc_text_size_caption_material"
        android:textStyle="bold" />

</RelativeLayout>