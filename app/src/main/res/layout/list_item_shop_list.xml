<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv"
        style="@style/ImageStyle"
        android:layout_width="96dp"
        android:layout_height="112dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:src="@drawable/succees" />
    <!--android:layout_marginTop="@dimen/padding_inner"-->
    <LinearLayout
        android:id="@+id/linear_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="128dp"
        android:layout_marginRight="80dp"

        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_inner"
            android:text="同仁堂 人参归睥丸 30g"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/title_text_size"
            android:typeface="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/padding_inner"
            android:layout_marginRight="@dimen/padding_inner"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/discountPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥9.9"
                android:textColor="@color/md_red_600"
                android:textSize="@dimen/title_sub_size" />

            <TextView
                android:id="@+id/realPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_outter"
                android:text="¥9.9"
                android:textColor="@color/md_grey_400"
                android:textSize="@dimen/text_size_small"
                android:typeface="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_inner"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="999评论"
            android:textColor="@color/md_grey_400"
            android:textSize="@dimen/text_size_medium"
            android:typeface="normal" />
    </LinearLayout>

    <ImageView
        android:id="@+id/shop"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical|right|bottom"
        android:layout_marginBottom="@dimen/padding_outter"
        android:layout_marginRight="@dimen/padding_inner"

        android:scaleType="centerInside"
        android:src="@drawable/succees" />

</FrameLayout>