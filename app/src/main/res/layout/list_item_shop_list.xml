<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:orientation="horizontal">

    <com.romens.images.ui.CloudImageView
        android:id="@+id/iv"
        style="@style/ImageStyle"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:src="@drawable/picture_fail" />

    <LinearLayout
        android:id="@+id/linear_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="128dp"
        android:layout_marginRight="80dp"

        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/padding_inner"
            android:layout_marginRight="@dimen/padding_inner"
            android:layout_marginTop="4dp"
            android:text="同仁堂 人参归睥丸 30g"
            android:textColor="@color/theme_title"
            android:textSize="@dimen/title_text_size"
            android:typeface="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/padding_inner"
            android:layout_marginRight="@dimen/padding_inner"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/discountPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥9.9"
                android:textColor="@color/md_red_600"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/realPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_outter"
                android:text="¥9.9"
                android:textColor="@color/md_grey_400"
                android:textSize="@dimen/text_size_small"
                android:typeface="normal"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_inner"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="999评论"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_medium"
            android:typeface="normal" />
    </LinearLayout>

    <ImageView
        android:id="@+id/shop"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical|right|bottom"
        android:layout_marginBottom="@dimen/padding_outter"
        android:layout_marginRight="@dimen/padding_inner"
        android:scaleType="centerInside"
        android:src="@drawable/ic_list_shopcaricon" />

</FrameLayout>