<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.romens.yjk.health.ui.components.SwLin
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/swlin_layout"
        android:layout_gravity="center_horizontal" >
        <LinearLayout
            android:id="@+id/swlin_main"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/swlin_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_grey600_24dp"
                android:gravity="center_vertical"
                android:minHeight="?attr/actionBarSize"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="08:30"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="#ffffff" >
            <TextView
                android:id="@+id/swlin_delete"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="删除"
                android:textColor="#ffffff"
                android:background="#ff0000"/>
        </LinearLayout>
        </com.romens.yjk.health.ui.components.SwLin>
</LinearLayout>