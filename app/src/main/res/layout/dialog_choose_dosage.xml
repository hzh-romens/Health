<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white">

    <TextView
        android:id="@+id/remind_dosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_white"
        android:drawablePadding="2dp"
        android:includeFontPadding="false"
        android:drawableRight="@drawable/ic_arrow_drop_down_grey600_24dp"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="2dp"
        android:paddingTop="4dp"
        android:text="片"
        android:textColor="@color/theme_title"
        android:textSize="@dimen/title_size"/>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/choose_dosage_edit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@id/remind_dosage"
        android:focusable="true"
        android:inputType="number"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/theme_title"
        android:textSize="@dimen/title_size"/>

    <!--android:background="@drawable/bg_white"
       android:layout_marginTop="51dp"-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/remind_dosage"
        android:id="@+id/line"
        android:layout_marginTop="50dp"
        android:background="#999999"/>
    <TextView
        android:id="@+id/choose_dosage_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/line"
        android:gravity="center"
        android:text="确定"
        android:includeFontPadding="false"
        android:textColor="@color/theme_title"
        android:textSize="@dimen/title_size"/>

</RelativeLayout>