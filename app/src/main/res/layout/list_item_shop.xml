<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="115dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.romens.yjk.health.ui.components.CheckableFrameLayout
            android:id="@+id/checkbox"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/btn_allcheck_selector"
            android:gravity="center" />

        <ImageView
            android:id="@+id/iv_detail"
            android:layout_width="64dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:padding="@dimen/padding_inner"
            android:id="@+id/tv_shop_infor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
           android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="多少分开始动画，建设的快速离开ssdsakdsa"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/title_sub_size"
            android:typeface="monospace" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/background_dark"
                android:id="@id/discountPrice"
                android:textSize="@dimen/title_sub_size"
                android:padding="@dimen/padding_inner"
                android:text="¥15.1"/>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <TextView
            android:id="@+id/tv_store"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="青岛药店"
            android:layout_marginLeft="@dimen/padding_inner"
            android:gravity="center_vertical"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/title_sub_size"
            android:typeface="normal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/realPrice"
                android:text="¥16"
                android:textSize="@dimen/title_small_size"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding_inner"
                android:textColor="@color/md_grey_400"
                />
            </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/padding_inner"
            android:layout_marginLeft="@dimen/padding_inner"
            android:layout_marginBottom="3dip"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_reduce"
                android:layout_width="35dp"
                android:layout_height="match_parent"

                android:background="@drawable/reduce"
                android:gravity="center" />

            <TextView
                android:id="@+id/et_num"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/shopping_cart_product_num_edit"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/md_grey_400"
                android:textSize="@dimen/title_sub_size"
                android:typeface="normal" />

            <Button
                android:id="@+id/bt_add"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/add"
                android:gravity="center" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
