<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="115dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <com.romens.yjk.health.ui.components.CheckableFrameLayout
        android:id="@+id/checkbox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_allcheck_selector"
        android:gravity="center"
        android:layout_margin="8dp"/>

    <ImageView
        android:id="@+id/iv_detail"
        android:layout_width="64dp"
        android:layout_height="96dp"
        android:scaleType="centerInside"
        android:layout_gravity="center"
       android:layout_margin="8dp"
        android:src="@drawable/ic_launcher" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_margin="8dp"
      >

        <TextView
            android:id="@+id/tv_shop_infor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:typeface="monospace"
            android:text="多少分开始动画，建设的快速离开"
            android:textColor="@android:color/background_dark"
            android:layout_marginBottom="3dip"
            android:layout_marginTop="3dip"
            android:textSize="@dimen/text_size_xlarge" />

        <TextView
            android:id="@+id/tv_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:typeface="monospace"
            android:text="青岛药店"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/tv_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:ellipsize="end"
            android:typeface="monospace"
            android:singleLine="true"
            android:text="今天九折"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:typeface="monospace"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="￥22"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/text_size_large" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="3dip"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_reduce"
                android:layout_width="35dp"
                android:layout_height="match_parent"

                android:background="@drawable/shopping_cart_product_num_reduce"
                android:gravity="center" />

            <TextView
                android:id="@+id/et_num"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/shopping_cart_product_num_edit"
                android:gravity="center"
                android:textColor="@android:color/background_dark"
                android:text="1"
                android:typeface="monospace"
                android:textSize="@dimen/text_size_large" />

            <Button
                android:id="@+id/bt_add"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/shopping_cart_product_num_add"
                android:gravity="center" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
