<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/layout_actionbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/remind_hint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/remind_drug"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text="药品"
            android:textColor="@color/theme_title"
            android:textSize="@dimen/title_size"/>

        <EditText
            android:id="@+id/remind_edit_drug"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/remind_hint1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请输入药品"
            android:textColor="@color/theme_sub_title"
            android:textSize="@dimen/title_size"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/theme_sub_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/remind_count"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text="剂量"
            android:textColor="@color/theme_title"
            android:textSize="@dimen/title_size"/>

        <TextView
            android:id="@+id/remind_dosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_white"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:gravity="center_vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:text="片"
            android:textColor="@color/theme_title"
            android:textSize="@dimen/title_size"/>

        <EditText
            android:id="@+id/remind_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/remind_dosage"
            android:background="@drawable/bg_white"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:text="1"
            android:textColor="@color/theme_title"
            android:textSize="@dimen/title_size"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/theme_sub_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/remind_time"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text="提示时间"
            android:textColor="@color/theme_title"
            android:textSize="@dimen/title_size"/>

        <TextView
            android:id="@+id/remind_time_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/remind_time_add"
            android:gravity="center_vertical"
            android:text="8:00"
            android:textColor="@color/theme_title"
            android:textSize="@dimen/title_size"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/theme_sub_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/remind_reset"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text="重复"
            android:textColor="@color/theme_title"
            android:textSize="@dimen/title_size"/>

        <TextView
            android:id="@+id/remind_day_timers"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/y"
            android:gravity="center_vertical"
            android:text="每日"
            android:textColor="@color/theme_title"
            android:textSize="@dimen/title_size"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/theme_sub_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/remind_hint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/remind_remark"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text="备注"
            android:textColor="@color/theme_title"
            android:textSize="@dimen/title_size"/>

        <EditText
            android:id="@+id/remind_edit_remark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/remind_hint2"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请输入备注"
            android:paddingLeft="8dp"
            android:textColor="@color/theme_sub_title"
            android:textSize="@dimen/title_size"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/theme_sub_title"/>
</LinearLayout>