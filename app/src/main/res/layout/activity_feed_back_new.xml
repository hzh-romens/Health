<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/line_color"
              android:orientation="vertical">

    <com.romens.android.ui.ActionBar.ActionBar
        android:id="@+id/feed_back_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/feed_back_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_white"
        android:gravity="top|left"
        android:hint="请输入反馈内容..."
        android:maxLines="5"
        android:minLines="5"
        android:padding="16dp"
        android:textColor="@color/theme_sub_title"
        android:textSize="@dimen/title_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="意见标签"
            android:textColor="@color/theme_sub_title"
            android:textSize="@dimen/title_sub_size"/>

        <TextView
            android:id="@+id/feed_back_choose_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/y"
            android:hint="点击选择反馈标签"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/theme_sub_title"
            android:textSize="@dimen/title_sub_size"/>
    </LinearLayout>

    <TextView
        android:id="@+id/feed_back_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_submit_btn"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="16sp"/>

</LinearLayout>