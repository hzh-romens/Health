<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
  >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background_shape"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/md_black_1000"
            android:text="修改购买数量"
            />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_btnReduce"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/shopping_cart_product_num_reduce"
            android:gravity="center" />

        <EditText
            android:id="@+id/dialog_editextNum"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/shopping_cart_product_num_edit"
            android:gravity="center"
            android:text="1"
            android:textSize="@dimen/text_size_medium" />

        <Button
            android:id="@+id/dialog_btnAdd"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/shopping_cart_product_num_add"
            android:gravity="center" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:padding="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:id="@+id/dialog_btnCancel"
            android:background="@drawable/btn_cancel_background_selector"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/md_black_1000"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:id="@+id/dialog_btnSure"
            android:background="@drawable/btn_sure_background_selector"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/md_black_1000"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
