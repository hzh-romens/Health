<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/item1"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
       android:layout_marginTop="@dimen/padding_inner"
        android:layout_marginBottom="@dimen/padding_inner"
        android:layout_marginLeft="@dimen/padding_outter"
        android:layout_marginRight="@dimen/padding_inner"
        android:src="@drawable/picture_fail"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical"
        android:id="@+id/iv"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/padding_inner"
        android:layout_marginBottom="@dimen/padding_inner"
        android:layout_marginRight="@dimen/padding_inner"
        android:layout_marginLeft="120dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/tv_name"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/text_size_medium"
                android:includeFontPadding="false"
                android:textColor="#666666"
                android:text="感冒药"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_large"
                android:id="@+id/tv_price"
                android:includeFontPadding="false"
                android:textColor="#666666"
                android:text="感冒药"/>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_inner"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/text_size_medium"
                android:id="@+id/tv_infor"
                android:textColor="#666666"
                android:text="感冒药"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/text_size_medium"
                android:id="@+id/tv_count"
                android:textColor="#666666"
                android:text="感冒药"/>
        </RelativeLayout>
   </LinearLayout>
   </FrameLayout>

