<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/padding_inner"
        android:layout_marginLeft="@dimen/padding_outter"
        android:layout_marginRight="@dimen/padding_inner"
        android:layout_marginTop="@dimen/padding_inner"
        android:scaleType="fitXY"
        android:src="@drawable/picture_fail" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/padding_inner"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="@dimen/padding_inner"
        android:layout_marginTop="@dimen/padding_inner"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="感冒药"
                android:layout_marginRight="64dp"
                android:textColor="#666666"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:includeFontPadding="false"
                android:text="感冒药"
                android:textColor="#666666"
                android:textSize="@dimen/text_size_large" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_inner">

            <TextView
                android:id="@+id/tv_infor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="感冒药"
                android:textColor="#666666"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="感冒药"
                android:textColor="#666666"
                android:textSize="@dimen/text_size_medium" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>

