<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@drawable/ic_address_bgc"
    android:layout_height="64dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/padding_inner"
        android:layout_marginBottom="@dimen/padding_inner"
        android:layout_gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView android:layout_width="@dimen/padding_outter"
                android:layout_height="@dimen/padding_outter"
                android:layout_marginLeft="@dimen/padding_inner"
                android:src="@drawable/ic_address"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收货人: 李四 15811331144"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_medium"
            android:textColor="#666666"
            android:layout_marginLeft="@dimen/padding_inner"
            android:id="@+id/person"/>
            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="北京市东城区..."
            android:includeFontPadding="false"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="32dp"
            android:textSize="@dimen/text_size_medium"
            android:textColor="#666666"
            android:id="@+id/address"/>
        </LinearLayout>
    <ImageView
       android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical|right"
        android:visibility="gone"
        android:src="@drawable/go"/>
</LinearLayout>