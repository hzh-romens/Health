<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_200" />

    <RelativeLayout
        android:id="@+id/rl_illustration"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/padding_outter">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="说明书"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_large" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/padding_inner"
            android:layout_marginLeft="@dimen/padding_inner"
            android:layout_marginRight="@dimen/padding_outter"
            android:layout_marginTop="@dimen/padding_inner"
            android:scaleType="centerInside"
            android:src="@drawable/ic_chevron_right_grey600_24dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DFDFDF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/padding_outter"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_yes"
            android:gravity="center"
            android:text="正品保证"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_inner"
            android:drawableLeft="@drawable/ic_yes"
            android:gravity="center"

            android:text="免运费"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_inner"
            android:drawableLeft="@drawable/ic_yes"
            android:gravity="center"
            android:text="货到付款"

            android:textColor="#666666"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_inner"
            android:drawableLeft="@drawable/ic_error"
            android:gravity="center"
            android:text="在线支付"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_200" />
</LinearLayout>