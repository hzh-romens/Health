<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        style="@style/titleStytle"
        android:orientation="horizontal"
        android:background="@color/theme_primary">
        <ImageView
            style="@style/iv_back_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_outter"
            android:id="@id/btn_back"
            android:background="@drawable/ic_ab_back"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="@dimen/padding_inner"
            android:layout_marginBottom="@dimen/padding_inner"
            android:layout_marginRight="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="购物车"
            android:inputType="textPhonetic"
            android:imeOptions="actionSearch"
            android:drawablePadding="8dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xlarge"
            />
    </RelativeLayout>
    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:groupIndicator="@null"
        android:layout_marginBottom="48dp"
        android:layout_marginTop="48dp"
        android:id="@+id/ev" />
    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/md_grey_100"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/padding_inner"
            android:layout_alignParentLeft="true"
            android:id="@+id/tv_content"
            android:text="共2件 总金额¥100"
            android:includeFontPadding="false"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_large"
           />
        <TextView
            android:id="@+id/accounts"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:background="#66cc00"
            android:gravity="center"
            android:singleLine="true"
            android:text="去结算"
            android:includeFontPadding="false"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />
        </RelativeLayout>

</FrameLayout>