<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/white">

        <View
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#f9f9f9"
            android:visibility="visible" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/padding_inner"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/padding_inner"
            android:text="药店名"
            android:textColor="#333333"
            android:textSize="@dimen/title_head_size"
            android:typeface="normal" />
    </FrameLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/title_background_grey"/>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding_outter">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:gravity="center"
            android:layout_margin="@dimen/padding_inner"
            android:text="药店派送" />

        <View
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <RadioButton
            android:id="@+id/rb2"
           android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_inner"
            android:text="到店自取" />
    </RadioGroup>

</LinearLayout>