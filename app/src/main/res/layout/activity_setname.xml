<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">
    <FrameLayout
        style="@style/titleStytle"
        android:background="@color/theme_primary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            style="@style/iv_back_style"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/padding_outter"
            android:background="@drawable/ic_ab_back"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="修改姓名"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="64dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginRight="48dp"
            android:hint="请输入姓名"
            android:textColorHint="#999999"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/text_size_medium"
            android:textColor="#333333"
            android:paddingLeft="@dimen/padding_outter"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:id="@+id/edit_name"
            />
        <ImageView
            android:layout_width="48dp"
            android:layout_height="42dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_btn_clear"
            android:scaleType="centerInside"
            android:id="@+id/btn_clear"

            />
        </FrameLayout>

</LinearLayout>