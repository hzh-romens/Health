<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/times_count_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="服药次数"
        android:textColor="@color/body_text_2" />

    <TextView
        android:id="@+id/times_count_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/times_count_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="1次"
        android:textColor="@color/material_drawer_dark_icons" />

    <ImageView
        android:id="@+id/times_count_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/ic_add_circle_black_18dp" />

    <ImageView
        android:id="@+id/times_count_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="23dp"
        android:layout_toLeftOf="@id/times_count_add"
        android:background="@drawable/ic_remove_circle_black_18dp" />

    <TextView
        android:id="@+id/times_count_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/times_count_count"
        android:layout_marginLeft="20dp"
        android:background="@color/material_drawer_dark_icons" />

    <ListView
        android:id="@+id/times_count_list"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_below="@id/times_count_line"
        android:layout_marginTop="10dp">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/times_count_list"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/times_count_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white"
            android:gravity="center"
            android:text="取消" />

        <TextView
            android:id="@+id/times_count_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_white"
            android:gravity="center"
            android:text="确定" />
    </LinearLayout>

</RelativeLayout>