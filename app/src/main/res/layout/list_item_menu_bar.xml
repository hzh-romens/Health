<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_white"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/menu_all_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:text="全部商品"
        android:textColor="@color/theme_sub_title"
        android:textSize="@dimen/title_sub_size"/>

    <TextView
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/theme_sub_title"/>

    <TextView
        android:id="@+id/menu_new_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:text="最新商品"
        android:textColor="@color/theme_sub_title"
        android:textSize="@dimen/title_sub_size"/>

    <TextView
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/theme_sub_title"/>

    <TextView
        android:id="@+id/menu_new_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:text="店铺动态"
        android:textColor="@color/theme_sub_title"
        android:textSize="@dimen/title_sub_size"/>
</LinearLayout>